generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          Int      @id @default(autoincrement()) @map("projects_id")
  title       String   @unique
  description String
  tags        Tag[]    @relation("ProjectTags")
  category    WebType
  gitHub      String
  videoUrl    String
  imageUrl    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum WebType {
  FRONTEND
  BACKEND
  FULLSTACK
}

model Tag {
  id       Int       @id @default(autoincrement()) @map("tags_id")
  name     String    @unique
  projects Project[] @relation("ProjectTags")
}
